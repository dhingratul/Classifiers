%% Variable Declaration
load Feature_Train; %Input = Feature Vectors
load Feature_Test; 
load Labels;
label=traininglabels;
Featu=F_train;
w=zeros(10,size(F_train,2)); % Each feature has a weight
b=-1;
wb=1;

% Score Activation

for i=length(Data)
    for j=1:(length(w))
%% Learning
    z=b+Data(i,:).*w(j,:);
    if j==1
    maximum=z;
    index=j;
    end
    if(z>maximum)
    maximum=z;
    index=j;
    end
y=maximum;
%%Weight Updates
w(i,:)=w(i,:)-Data()  
end




